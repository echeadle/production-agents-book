# Kubernetes Secret Template
#
# IMPORTANT: This is a TEMPLATE file. DO NOT commit actual secrets!
#
# To create the secret:
# 1. Base64 encode your API key:
#    echo -n "your_api_key_here" | base64
# 2. Replace YOUR_BASE64_ENCODED_API_KEY below
# 3. Apply: kubectl apply -f secret.yaml
# 4. Delete the file or ensure it's in .gitignore
#
# Better approach: Use a secret management tool like:
# - kubectl create secret generic agent-secrets --from-literal=anthropic-api-key=your_key
# - External Secrets Operator with AWS Secrets Manager / HashiCorp Vault
# - Sealed Secrets
# - SOPS (Secrets OPerationS)

apiVersion: v1
kind: Secret
metadata:
  name: agent-secrets
  namespace: production-agents
  labels:
    app: production-agent
type: Opaque
data:
  # Base64 encoded values
  # echo -n "your_value" | base64
  anthropic-api-key: YOUR_BASE64_ENCODED_API_KEY
  # Add other secrets as needed
  # redis-password: YOUR_BASE64_ENCODED_PASSWORD

---
# Example using stringData (Kubernetes will base64 encode automatically)
# This is easier but less secure if file is committed
# Use this ONLY for local development, never production
apiVersion: v1
kind: Secret
metadata:
  name: agent-secrets-dev
  namespace: production-agents
  labels:
    app: production-agent
    environment: development
type: Opaque
stringData:
  anthropic-api-key: "your_development_api_key"
  redis-password: "dev_redis_password"
