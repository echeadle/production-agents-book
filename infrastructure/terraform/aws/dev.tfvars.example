# Development Environment Configuration
#
# Copy this file to dev.tfvars and fill in your values

# General
project_name = "production-agents"
environment  = "dev"
aws_region   = "us-west-2"
cost_center  = "engineering"

# Networking
vpc_cidr                  = "10.1.0.0/16"
availability_zones_count  = 2  # Fewer AZs for cost savings
private_subnet_cidrs      = ["10.1.1.0/24", "10.1.2.0/24"]
public_subnet_cidrs       = ["10.1.101.0/24", "10.1.102.0/24"]

# EKS Cluster
kubernetes_version              = "1.28"
cluster_endpoint_public_access  = true
node_instance_types             = ["t3.medium"]  # Smaller for dev
node_capacity_type              = "SPOT"         # Cost savings with Spot instances
node_group_min_size             = 1
node_group_max_size             = 5
node_group_desired_size         = 2

# Redis
redis_engine_version           = "7.0"
redis_node_type                = "cache.t3.medium"  # Smaller for dev
redis_num_replicas             = 1                  # Single replica
redis_snapshot_retention_days  = 3                  # Shorter retention

# Secrets
anthropic_api_key = "YOUR_DEV_ANTHROPIC_API_KEY_HERE"

# Monitoring
log_retention_days = 7  # Shorter for dev
alert_email        = "dev-team@example.com"

# Additional tags
additional_tags = {
  Owner = "dev-team"
  Purpose = "development"
}
